NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Google Photos API Integration
# Instructions:
# 1. Go to Google Cloud Console (https://console.cloud.google.com)
# 2. Create a new project and enable "Photos Library API"
# 3. Create OAuth 2.0 Client IDs credentials (Web application)
# 4. Use Google OAuth 2.0 Playground or a script to get a Refresh Token
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"
GOOGLE_REFRESH_TOKEN="your_google_refresh_token_here"

# Gemini API Integration
# Instructions:
# 1. Go to Google AI Studio (https://aistudio.google.com/app/apikey)
# 2. Create a new API key
GEMINI_API_KEY="your_gemini_api_key_here"

# Admin Dashboard
# Instructions:
# 1. Set a strong JWT secret (random 32+ char string)
# 2. Set admin username
# 3. Generate password hash: node -e "console.log(require('bcryptjs').hashSync('YOUR_PASSWORD', 10))"
ADMIN_JWT_SECRET="change-this-to-a-random-secret-string-32chars"
ADMIN_USERNAME="admin"
ADMIN_PASSWORD_HASH="$2a$10$placeholder_hash_generate_with_bcryptjs"

# LINE Notify Integration
# Instructions:
# 1. Go to https://notify-bot.line.me/my/
# 2. Click "Generate token" and select the chat/group to notify
# 3. Paste the token below
LINE_NOTIFY_TOKEN="your_line_notify_token_here"

# Email Notifications via Resend
# Instructions:
# 1. Go to https://resend.com and create a free account
# 2. Add and verify your domain (or use onboarding@resend.dev for testing)
# 3. Create an API key
RESEND_API_KEY="re_your_resend_api_key_here"
NOTIFICATION_EMAIL="poppatompong@gmail.com"
